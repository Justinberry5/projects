name = input("What is your name?")
city = input("What is your favorite city?")
thing = input("enter a noun that is an item")
celeb = input("Who is your favorit celebrity ")
favorit = input("What is your favorit thing to do ending with ing")
verb_one = input("Enter a verb")
verb_two = input("enter a verb")
ad = input("enter an adjective")
ad_two = input("enter another adjective")
ad_three = input("enter your third adjective")

print(name + " is in " + city + "." + name + " notices that " + city + " looks " + ad)
print("while in " + city + name + " saw " + celeb + " carrying a " + ad_two + thing + ".")
print("while in" + city + name " and saw " + celeb +  " go " + favorit  + ".")
print("after the big day you " + verb_one + " " + verb_two + " through the  " + ad_three + city + ".")
